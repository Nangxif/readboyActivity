.section{
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  display: flex;
}
.section-picker{
  flex: 0 0 250rpx;
  padding-left: 20rpx;
  height: 90rpx;
}
.picker-name{
  display: inline-block;
  max-width: 220rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 90rpx;
  line-height: 90rpx;
}
.picker-icon{
  display: inline-block;
  width: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  vertical-align: top;
}
.section-keywordForm{
  flex: 1;
  height: 90rpx;
  box-sizing: border-box;
}
.section-search{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx; 
  height: 50rpx;
  border:1rpx solid rgba(0,0,0,0.2);
  border-radius: 40rpx;
  background-color: white;
}
.section-icon{
  box-sizing: border-box;
  display: inline-block;
  padding: 12rpx 10rpx;
  width: 10%;
  height: 50rpx;
  vertical-align: top;
}
.keyword{
  box-sizing: border-box;
  display: inline-block;
  padding: 0rpx 10rpx;
  width: 90%;
  height: 50rpx;
}



/* 推荐门店 */
.item{
  width: 100%;
  background-color: white;
  margin-bottom: 28rpx;
  border-bottom: 1rpx solid #e9e9e9;
  border-top: 1rpx solid #e9e9e9;
}
.item-title{
  box-sizing: border-box;
  padding:15rpx 36rpx;
  font-size: 33rpx;
  font-weight: 600;
  width: 100%;
  background-color: white;
  z-index: 5;
}
.item-content{
  margin: 0 auto;
  padding-top: 20rpx;
  width: 678rpx;
  border-top: 1rpx solid #e9e9e9;
}
.item-preview{
  position: relative;
  width: 100%;
}
.item-img{
  margin: 0 auto;
  display: block;
  width: 678rpx;
  height: 300rpx;
}
.item-area{
  padding: 0rpx 14rpx 0rpx 18rpx;
  position: absolute;
  right: 0rpx;
  top: 13rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #7c1615;
  background-color: #fed700;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.item-t{
  position: absolute;
  left: 24rpx;
  top: 64rpx;
  width: 352rpx;
  height: 44rpx;
  color: #ffebe3;
  font-size: 44rpx;
  text-align: center;
  line-height: 44rpx;
}
.item-ft{
  position: absolute;
  left: 99rpx;
  top: 186rpx;
  width: 210rpx;
  height: 25rpx;
  color: #ffebe3;
  font-size: 25rpx;
  text-align: center;
  line-height: 25rpx;
}
.item-time{
  position: absolute;
  left:42rpx; 
  top:224rpx;
  width: 305rpx;
  height: 25rpx;
  line-height: 25rpx;
  font-size: 17rpx;
  color: #762200;
  text-align: center;
}
.item-prize{
  position: absolute;
  right: 47rpx;
  top: 81rpx;
  width: 257rpx;
  height: 166rpx;
}
.item-prize image{
  display: block;
  margin: 0 auto;
  width: auto;
  height: 100%;
}
.item-detail{
  padding: 15rpx 0rpx;
  display: flex;
  width: 678rpx;
  height: 70rpx;
}
.item-share{
  flex: 1;
  height: 70rpx;
  line-height: 35rpx;
  font-size: 27rpx;
  color: #1f1f1f;
}
.item-more{
  box-sizing: border-box;
  flex: 0 0 172rpx;
  height: 70rpx;
}
.item-num{
  width: 100%;
  height: 35rpx;
  line-height: 35rpx;
  color: #10a2ff;
  font-size: 20rpx;
  text-align: right;
}
.item-icon{
  display: inline-block;
  width: 20rpx;
  height: 18rpx;
}
.item-store{
  width: 100%;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 18rpx;
  color: #a8a8a8;
  text-align: right;
}


.activity-end{
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: rgba(0,0,0,0.3);
  z-index: 2;
}
.activity-end-text{
  width: 150rpx;
  height: 50rpx;
  color: white;
  background-color: rgba(0,0,0,0.8);
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
}

.localreflash{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 66rpx;
  width: 100%;
  text-align: center;
  font-size: 27rpx;
  color: #a8a8a8;
  line-height: 66rpx;
}
.localreflash image{
  width: 33rpx;
  height: 33rpx;
}






.modal{
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.6);
}
.modal-content{
  padding:51rpx 43rpx;
  width: 561rpx;
  max-height: 680rpx;
  background-color: white; 
  border-radius: 10rpx;
}
.modal-title{
  font-size: 36rpx;
}
.modal-store{
  width: 100%;
}

.modal-store-item{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
}
.modal-store-item-1{
  display: flex;
  height: 37rpx;
}
.modal-county{
  flex: 1;
  height: 37rpx;
  line-height: 37rpx;
  font-size: 27rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.modla-distance{
  flex: 0 0 150rpx;
  height: 25rpx;
  font-size: 20rpx;
  color: #777777;
  text-align: right;
}
.modal-store-item-2{
  font-size: 20rpx;
  color: #777777;
}