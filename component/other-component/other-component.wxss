/* 好友助力滚动框 */
.scrollcontent{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding-top: 49rpx;
  padding-bottom: 49rpx;
}
.scrollcontent_line{
  padding: 0rpx;
  margin: 0 auto;
  width: 600rpx;
  height: 116rpx;
  border-bottom:1rpx solid #e3e3e3;
}
.scrollcontent_line:last-child{
  border-bottom:0rpx;
}
.scrollcontent_line_1{
  display: inline-block;
  margin-top: 24rpx;
  width: 68rpx; 
  height: 68rpx;
  vertical-align: top;
  border-radius: 50%;
}
.scrollcontent_line_2{
  display: inline-block;
  box-sizing: border-box;
  padding-left: 19rpx;
  max-width:202rpx; 
  height: 116rpx;
  line-height: 116rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  vertical-align: top;
}
.scrollcontent_line_3{
  display: inline-block;
  width: 330rpx;
  height: 116rpx;
  line-height: 116rpx;
  font-size: 30rpx;
  vertical-align: top;
}

.scrollcontentnone{
  position: relative;
  width: 100%;
  height: 100%;
}
.scrollcontentnone_pic{
  margin: auto;
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 227rpx;
  width: 211rpx;
  height:202rpx;
}
.scrollcontentnone_text{
  width: 100%;
  position: absolute;
  top: 438rpx;
  font-size: 32rpx;
  color:#919191;
  text-align: center;
}


