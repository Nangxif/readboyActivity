/* 好友助力 */
.scroll{
  position: relative;
  margin: 0 auto;
  margin-top: 122rpx;
  width: 672rpx;
  height: 690rpx;
  background-color: white;
  border-radius: 10rpx;
}
.scroll-top{
  margin: auto;
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: -50rpx;
  width: 543rpx;
  height: 100rpx;
}
